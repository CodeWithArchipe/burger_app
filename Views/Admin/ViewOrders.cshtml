@model List<Order>

@{
    ViewData["Title"] = "View Orders";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - CUT_Burger</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Burger App Admin</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="@Url.Action("AdminDashboard", "Admin")">Dashboard</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("ViewOrders", "Admin")">Orders</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("ViewAllUsers", "Admin")">Users</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Settings</a>
            </li>
        </ul>
    </div>
</nav>

<div class="container mt-4">
    <h2>Orders</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Order Number</th>
                <th>User Name</th>
                <th>Total Amount</th>
                <th>Order Status</th>
                <th>Payment Method</th>
                <th>Estimated Delivery Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderNumber</td>
                    <td>@order.UserName</td>
                    <td>@order.TotalAmount.ToString("C")</td>
                    <td>@order.OrderStatus</td>
                    <td>@order.PaymentMethod</td>
                    <td>@order.EstimatedDeliveryTime</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
