@model CUT_Burger.Models.User

@{
    ViewData["Title"] = "Delete User";
}
<html>
<body>
<h2>Delete User</h2>

<div>
    <h4>Are you sure you want to delete this user?</h4>
    <div>
        <strong>Username:</strong> @Model.Username <br />
        <strong>Email:</strong> @Model.Email <br />
        <strong>City:</strong> @Model.Address?.City
    </div>

    <form asp-action="DeleteUserConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="ManageUsers" class="btn btn-secondary">Cancel</a>
    </form>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>